<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/size_1dp"
    app:cardMaxElevation="@dimen/size_1dp">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_item_size"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_account_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_data"
                style="@style/PhoneBook.TextView"
                android:paddingBottom="@dimen/size_2dp"
                android:text="Вербицкий Алексей"
                android:textColor="@color/dark_grey_color"
                android:textSize="@dimen/input_text_size" />

            <TextView
                android:id="@+id/tv_phone_number"
                style="@style/PhoneBook.TextView"
                android:paddingTop="@dimen/size_2dp"
                android:text="+38 (095) 477-66-20"
                android:textColor="@color/grey_color"
                android:textSize="@dimen/item_text_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_call_phone"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_make_call" />

    </LinearLayout>

</android.support.v7.widget.CardView>

